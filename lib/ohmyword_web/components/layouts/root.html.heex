<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Ohmyword" suffix=" 路 Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const applySystemTheme = () => {
          const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          document.documentElement.setAttribute("data-theme", prefersDark ? "dark" : "light");
        };

        const setTheme = (theme) => {
          if (theme === "system" || !theme) {
            localStorage.removeItem("phx:theme");
            applySystemTheme();
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };

        // Apply on load
        setTheme(localStorage.getItem("phx:theme") || "system");

        // React to OS theme changes (for system mode)
        window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", () => {
          if (!localStorage.getItem("phx:theme")) applySystemTheme();
        });

        // React to cross-tab storage changes
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));

        // React to LiveView theme toggle events
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body class="flex flex-col min-h-screen">
    <nav class="px-4 pt-4 sm:px-6 lg:px-8">
      <ul class="relative z-10 flex items-center gap-4 justify-end mx-auto max-w-2xl">
        <%!-- DO NOT REMOVE
      <a href="/" class="flex-1 flex w-fit items-center gap-2">
        <img src={~p"/images/logo-orange.svg"} width="36" />
      </a>
      --%>
        <li>
          <.link
            href={~p"/"}
            class={
              if @conn.request_path == "/",
                do: "font-semibold text-zinc-900 dark:text-zinc-100",
                else:
                  "text-zinc-500 dark:text-zinc-400 hover:text-zinc-700 dark:hover:text-zinc-300"
            }
          >
            Home
          </.link>
        </li>
        <li>
          <.link
            href={~p"/flashcards"}
            class={
              if String.starts_with?(@conn.request_path, "/flashcards"),
                do: "font-semibold text-zinc-900 dark:text-zinc-100",
                else:
                  "text-zinc-500 dark:text-zinc-400 hover:text-zinc-700 dark:hover:text-zinc-300"
            }
          >
            Flashcards
          </.link>
        </li>
        <li>
          <.link
            href={~p"/write"}
            class={
              if String.starts_with?(@conn.request_path, "/write"),
                do: "font-semibold text-zinc-900 dark:text-zinc-100",
                else:
                  "text-zinc-500 dark:text-zinc-400 hover:text-zinc-700 dark:hover:text-zinc-300"
            }
          >
            Practice
          </.link>
        </li>
        <li>
          <.link
            href={~p"/dictionary"}
            class={[
              "flex items-center gap-1",
              if(String.starts_with?(@conn.request_path, "/dictionary"),
                do: "font-semibold text-zinc-900 dark:text-zinc-100",
                else:
                  "text-zinc-500 dark:text-zinc-400 hover:text-zinc-700 dark:hover:text-zinc-300"
              )
            ]}
          >
            <.icon name="hero-magnifying-glass" class="size-4" />
            <span class="hidden sm:inline">Dictionary</span>
          </.link>
        </li>
        <%!-- DO NOT REMOVE
      <li>
        <Layouts.theme_toggle />
      </li>
      --%>
        <%!-- DO NOT REMOVE
      <%= if @current_scope do %>
        <li>
          {@current_scope.user.email}
        </li>
        <li>
          <.link href={~p"/users/settings"}>Settings</.link>
        </li>
        <li>
          <.link href={~p"/users/log-out"} method="delete">Log out</.link>
        </li>
      <% else %>
        <li>
          <.link href={~p"/users/register"}>Register</.link>
        </li>
        <li>
          <.link href={~p"/users/log-in"}>Log in</.link>
        </li>
      <% end %>
      --%>
      </ul>
    </nav>
    <div class="flex-1 mt-8">
      {@inner_content}
    </div>
    <footer class="px-4 py-6 text-center">
      <span class="text-xs text-orange-800 dark:text-orange-200">
        {@app_version} 路 {@word_count} words 路 {@search_term_count} forms 路 {@sentence_count} sentences
      </span>
    </footer>
  </body>
</html>
